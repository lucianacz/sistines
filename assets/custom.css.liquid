/* FEATURED PRODUCTS WITH IMAGE */

.product-collection .content-products{
  display: flex;
  flex-direction: row;
  flex: 0 1 auto;
  flex-wrap: wrap;
  width: 100%;
}

.product-collection .content-products.reverse{
  flex-direction: row-reverse;
}

.product-collection .column{
  display: flex;
  flex-flow: row wrap;
  align-items: flex-start;
  flex: 0 1 auto;
  justify-content: center;
  padding: 0;
}

.product-collection .description,
.product-collection .heading {
  max-width: 500px;
  text-align: center;
  margin: auto;
}

.product-collection .product--details{
  padding: 12px 1px 5px;
}


.product-collection .description_button{
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 10px auto 20px;
  border-bottom: 1px solid black;
  width: fit-content;
}

.product-collection .product--root{
  width: 49%;
  padding: 0;
  margin-top: 20px;
}

.product-collection .product--root:nth-child(1),
.product-collection .product--root:nth-child(3),
.product-collection .product--root:nth-child(5)
{
  margin-right: 1%;
}

.product-collection .product--root:nth-child(2),
.product-collection .product--root:nth-child(4),
.product-collection .product--root:nth-child(6)
{
  margin-left: 1%;
}

.column-image{
  width: 100%;
}

.column-image img{
  object-fit: cover;
  object-position: center;
  height: 100%;
  height: 200px;
  width: 100%;
  margin-top: 20px;
}

@media screen and (min-width: 1024px){
  .product-collection .column-image{
    width: 40%;
  }
  
  .product-collection .column-products{
    width: 60%;
  }

  .column-image img{
    height: 100%;
    margin-top: 0px;
  }

  .product-collection .product--root{
    width: 31%;
    margin-right: 2.3%;
    padding: 0;
    margin-top: 0;
  }


  .product-collection .product--root:nth-child(4),
  .product-collection .product--root:nth-child(5),
  .product-collection .product--root:nth-child(6)
  {
    margin-top: 20px;
  }

  .product-collection .product--root:nth-child(3),
  .product-collection .product--root:nth-child(6){
    margin-right: 0px; 
  }

  .product-collection .product--root:nth-child(1),
  .product-collection .product--root:nth-child(4){
    margin-left: 0px; 
  }

  .image-mobile{
    display: none;
  }
}

@media screen and (max-width: 1023px){
  .image-desktop.mobile-exists{
    display: none;
  }
}

