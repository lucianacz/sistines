  .tab button:hover {
    background-color: inherit;
  }

  .tab .tablinks:before {
    content: "";
    background: url("data:image/svg+xml;charset=utf-8,%3Csvg width='10' height='20' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1l8 8.897L1 19' stroke='%23C4C4C4'/%3E%3C/svg%3E") no-repeat;
    padding-right: 20px;
    height: 10px;
    width: 10px;
    background-color: inherit;
    background-size: contain;
    display: none;
  }

  .tab .tablinks.active:before {
    display: block;
  }

  .tab .tablinks.active{
    background-color: inherit;
    display: flex;
    font-weight: bold;
    text-decoration: none;
  }
