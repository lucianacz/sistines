/* ------------------- */


/* TEXT WITH IMAGE */
.impact-image_text .featured-content--text-container{
  max-width: initial;
}

.impact-image_text .featured-content--root{
  padding: 0;
}

@media screen and (max-width: 767px){
  #shopify-section-impact-image_text .featured-content--image{
    order: 3;
  }
}

.featured-content--image{
  transition: transform 1s;
}

.images-paragraph{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

@media screen and (max-width: 767px){
  .images-paragraph{
    justify-content: center;
  }
}


.images-paragraph img{
  object-fit: contain;
}

/* PARALLAX IMAGE */

.parallax-image {
  position: relative;
}

.parallax-image .parallax {
  min-height: 540px;
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  margin: 0;
}

.parallax-image .text-box {
  position: absolute;
  z-index: 1000;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  width: 80%;
  max-width: 600px;
  padding: 20px;
}

@media only screen and (max-width: 1024px) {
  .parallax-image .parallax {
    background-attachment: scroll;
  }
}

.parallax-image .navbar {
  margin-bottom: 0 !important;
}

.parallax-image .parallax-overlay{
  min-height: 540px;
  width: 100%;
  position: absolute;
  z-index: 1;
  top: 0;
}

/* POP UP */

.modal-mask, .popup-modal-mask{
  background-color: transparent;
}


.modal-on .popup-modal-close {
  position: absolute;
  top: 40px;
  right: 30px;
  opacity: 0;
}

.popup--heading{
  padding-bottom: 15px;
}

.popup--root #contact_form{
  padding-top: 20px;
}

.popup-modal .inner,
.popup-modal .popup-image{
  background-color: {{ settings.popup--background }};
}

.popup-modal-close .icon--cross path,
.popup-modal .popup--heading,
.popup-modal .popup--description,
.popup-modal input {
  color: {{ settings.popup--text }};
  border-color: {{ settings.popup--text }};
}