
.limit-width{
  max-width: 1315px;
  margin: auto;
}

/* HEADER */

.header--bottom-row {
  padding: 8px 0 3px;
}

.header--top-row {
  margin-bottom: 14px;
}

.header--icons {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.header--cart {
  position: inherit;
  top: inherit;
}

.x-menu--level-1--link>a {
  padding: 10px 16px;
}

.header--search {
  order: inherit
}

.header--localization .disclosure--toggle{
  padding: 2px 18px 2px 5px;
  font-size: 12px;
}

.header--localization .disclosure--option-link{
  padding: 5px 8px;
}
@media only screen and (min-width: 768px) {
  a.header--cart-link {
    margin-top: 4px;
  }

  .header--root {
    padding: 10px 48px 0;
    padding-left: 0;
  } 

  .x-menu{
    padding-left: 48px;
  }

  .disclosure--main{
    margin-right: 14px;
  }
}

.x-menu--overlap-icon{
  top: 10px;
  left: 30px;
}

@media screen and (min-width: 1400px){
  .header--root {
    padding: 10px 0px 0;
    }
  .x-menu{
    padding-left: 0px;
  }
}

.header--mobile {
  padding: 15px;
}

.impact-container{
  margin-right: 5px;
}

@media screen and (min-width: 700px){
  .impact-container{
    margin-right: 15px;
  } 
}

.header--mobile--cart .header--cart-link{
  position: relative;
}

.header--mobile--cart .header--cart-number{
  background: black;
  padding: 0 5px;
  border-radius: 10px;
  position: absolute;
  top: -8px;
  right: 1px;
  font-size: 0;
  font-weight: bold;
  line-height: 2;
  color: white;
}

.header--mobile--cart  .cart--external--total-items{
  font-size: 10px;
}

.header--mobile-icons{
  display: flex;
  align-items: center;
  margin-left: 10px;
  justify-content: flex-end;
}



.header--mobile--cart a.header--cart-link {
  padding:0px 6px;
  margin-right: -10px;
  top: 1px;
}

.header--mobile--cart{
  padding-left: 0;
}

/* FOOTER */

.footer--root{
  padding: 80px 48px;
}

@media screen and (max-width: 767px) {
  .legal--footer {
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .legal--menu{
    justify-content: center;
    flex-wrap: wrap;
  }

  .footer--block .footer--block--container {
    margin: 0 auto;
  }

  .footer--block{
    padding-bottom: 32px;
  }

  .legal--footer img{
    margin-bottom: 10px;
  }

  .legal--menu li {
    margin-right: 3px;
  }
}


.legal--menu {
  display: flex;
}

.legal--menu li {
  margin-right: 10px;
}

.legal--menu li a {
  text-decoration: underline;
}

.footer--block--container #footer-email {
  background: none;
  border: 1px solid {{ settings.color--footer }};
  color: {{ settings.color--footer }};
}

.footer--block--container .footer--form-submit {
  position: relative;
}

.footer--block--container .footer--form-submit button {
  border: none;
  background: none;
  color: white;
  position: absolute;
  right: 5px;
  display: flex;
  align-items: center;
}

.footer--block--container .footer--form-submit button svg {
  width: 20px;
}

.footer--sub {
  align-items: center;
}

@media screen and (min-width: 767px){
  .legal--footer img{
    margin-right: 20px;
  }

  .footer--block[data-block-type=menu] {
    -ms-flex-preferred-size: 30%;
    flex-basis: 15%;
  }

  .footer--sub{
    margin-top: 30px;
  }
  .footer--block[data-block-type=menu] .footer--block--container{margin:0 0 0 auto}
}

/* ADD CART */
.product-form--add-to-cart{
  background: {{ settings.addCart-background }};
  border: 1px solid {{ settings.addCart-border }};
  color: {{ settings.addCart-font }};
}


.product-form--add-to-cart:hover{
  background: {{ settings.addCart-background-hover }};
  border: 1px solid {{ settings.addCart-border-hover }};
  color: {{ settings.addCart-font-hover }};
}

.stamped-content{
  margin-bottom: 50px;
}

