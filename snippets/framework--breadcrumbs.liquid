<ul class="breadcrumbs--root">
   <li data-item="block-link">
      <a href="{{ routes.root_url }}">{{ 'general.breadcrumbs.home' | t }}</a>
   </li>

   {% if template contains "product" %}
      {% if collection %}
         <li data-item="block-link">
            <a href="{{ routes.collections_url }}">
               {{ 'general.breadcrumbs.collections' | t }}
            </a>
         </li>
         <li data-item="block-link">
            <a href="{{ collection.url }}">{{ collection.title }}</a>
         </li>
      {% else %}
         <li data-item="block-link">
            <a href="{{ routes.all_products_collection_url }}">
               {{ 'general.breadcrumbs.products' | t }}
            </a>
         </li>
      {% endif %}

      <li data-item="accent-text">{{ product.title }}</li>

   {% elsif template contains "collection" %}
      {% assign collection_title = collection.title %}
      {% if collection.handle == 'all' %}
        {% assign collection_title = 'general.breadcrumbs.products' | t %}
      {% endif %}

      <li data-item="block-link">
         <a href="{{ routes.collections_url }}">
            {{ 'general.breadcrumbs.collections' | t }}
         </a>
      </li>
      <li data-item="accent-text">
         {% if current_tags %}
            {{ collection_title | link_to_remove_tag: current_tags.first }}
         {% else %}
            {{ collection_title }}
         {% endif %}
      </li>
      {% if current_tags %}
         <li data-item="accent-text">{{ current_tags.first }}</li>
      {% endif %}

   {% elsif template contains "blog" %}
      <li data-item="accent-text">{{ blog.title }}</li>
   {% elsif template contains "page" %}
      <li data-item="accent-text">{{ page.title }}</li>
   {% elsif template contains "article" %}
      <li data-item="block-link">{{ blog.title | link_to: blog.url }}</li>
      <li data-item="accent-text">{{ article.title }}</li>
   {% elsif template contains "404" %}
      <li data-item="accent-text">404</li>
   {% elsif template contains "customers/login" %}
      <li data-item="accent-text">{{ 'general.breadcrumbs.account' | t }}</li>
   {% elsif template contains "customers/register" %}
      <li data-item="accent-text">{{ 'general.breadcrumbs.register' | t }}</li>

   {% elsif template contains "customers/account" %}
      <li data-item="accent-text">{{ 'general.breadcrumbs.account' | t }}</li>
   {% elsif template contains "customers/addresses" %}
      <li data-item="block-link">
         <a href="{{ routes.account_url }}">{{ 'general.breadcrumbs.account' | t }}</a>
      </li>
      <li data-item="accent-text">{{ 'general.breadcrumbs.addresses' | t }}</li>
   {% elsif template contains "customers/order" %}
      <li data-item="block-link">
         <a href="{{ routes.account_url }}">{{ 'general.breadcrumbs.account' | t }}</a>
      </li>
      <li data-item="accent-text">{{ page_title }}</li>
   {% elsif template contains "customers/activate_account" %}
      <li data-item="accent-text">{{ 'general.breadcrumbs.activate_account' | t }}</li>

   {% elsif template contains "customers/reset_password" %}
      <li data-item="accent-text">{{ page_title }}</li>
   {% elsif template contains "search" %}
      <li data-item="accent-text">{{ page_title }}</li>
   {% elsif template contains "list-collections" %}
      <li data-item="accent-text">{{ page_title }}</li>
   {% elsif template contains "cart" %}
      <li data-item="accent-text">{{ page_title }}</li>
   {% endif %}
</ul>