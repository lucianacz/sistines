{% comment %} Variables {% endcomment %}
{% assign heading = section.settings.heading | escape %}

{% if section.settings.show_section %}
{% comment %} View {% endcomment %}
<div
  class="featured-text--root"
  style="{% render 'framework--background-colors', bg_color: section.settings.background-color %}
  {% if section.settings.show_border %}border-top: 1px solid {{ section.settings.border_line }}; border-bottom: 1px solid {{ section.settings.border_line }};{% endif %}"
  data-section-id="{{ section.id }}"
  data-container="section"
>
  <div
    class="featured-text--blocks"
    data-container="panel"
  >
    <div class="featured-text--block" data-container="block">
      {% if heading != blank %}
        <h2 class="featured-text--heading" data-item="section-heading"
        style="color: {{ section.settings.heading_color }}; font-size: {{ section.settings.heading_size }}px;">{{ heading }}</h2>
      {% endif %}
      <div class="featured-text--body" data-item="rte-content"
      style="color: {{ section.settings.text_color }}; font-size: {{ section.settings.text_size }}px;">
        {{ section.settings.text }}
      </div>
    </div>
  </div>
</div>
{% endif %}

{% schema %}
  {
    "name": "Rich text",
    "settings": [
    {
      "type": "checkbox",
      "id": "show_section",
      "label": "Show section",
      "default": true
    },
      {
        "id": "background-color",
        "label": "Background color",
        "type": "select",
        "options": [
          { "label": "None", "value": "none" },
          { "label": "Light grey", "value": "light" },
          { "label": "Accent", "value": "accent" }
        ],
        "default": "none"
      },
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Talk about your brand"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
      },
      {
          "type": "checkbox",
          "id": "show_border",
          "label": "Show border",
          "default": true
      },
      {
          "type": "color",
          "id": "border_line",
          "label": "Border line",
          "default": "#353b1e"
      },
      {
          "type": "color",
          "id": "heading_color",
          "label": "Heading color",
          "default": "#353b1e"
      },
      {
          "type": "color",
          "id": "text_color",
          "label": "#353b1e",
          "default": "#353b1e"
      },
      {
        "type": "range",
        "id": "heading_size",
        "label": "Heading size",
        "unit": "px",
        "min": 20,
        "max": 40,
        "step": 1,
        "default": 36
      },
      {
        "type": "range",
        "id": "text_size",
        "label": "Text size",
        "unit": "px",
        "min": 10,
        "max": 30,
        "step": 1,
        "default": 20
      }
    ]
  }
{% endschema %}
