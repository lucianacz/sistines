                        {{ 'customer.addresses.phone' | t }}
                      </label>
                    </td>
                    <td>
                      <input
                        class="address_form"
                        type="text"
                        id="address_phone_{{ form.id }}"
                        name="address[phone]"
                        value="{{ form.phone }}"
                        size="40"
                      />
                    </td>
                  </tr>
                  <tr>
                    <td></td>
                    <td class="address--checkbox-container" data-item="paragraph">
                      {{ form.set_as_default_checkbox }} {{ 'customer.addresses.set_default' | t }}
