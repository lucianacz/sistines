<div class="account-tabs">
  <div class="tab">
    <h4 data-item="block-heading">{{ customer.name }}</h4>
    <a class="tablinks tablinks--address" href="/account/addresses">{{ 'customer.account.page_title' | t }}</a>
    <a class="tablinks tablinks--account"  href="/account">Order History</a>
    <button class="tablinks">{{ 'customer.account.logout' | t | customer_logout_link }}</button>
  </div>

{% paginate customer.addresses by 5 %}

    <div id="customer-addresses">
      
      <h1 data-item="section-heading">
        {{ 'customer.account.page_title' | t }}
      </h1>

      <div class="address--container customer--root account--orders">
